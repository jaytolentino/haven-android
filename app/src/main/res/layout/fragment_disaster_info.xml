<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/ivThumb"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="@dimen/spacing_small" />

    <TextView
        android:text="SF TechCrunch Disrupt Hackathon Fire"
        android:textSize="16sp"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivThumb"
        android:layout_toEndOf="@+id/ivThumb"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:paddingRight="48dp" />

    <TextView
        android:text="Building Fire"
        android:textSize="12sp"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivThumb"
        android:layout_toEndOf="@+id/ivThumb"
        android:layout_below="@id/tvTitle"
        android:paddingRight="@dimen/spacing_medium" />

    <LinearLayout
        android:id="@+id/llCounts"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_alignLeft="@+id/tvDescription"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_alignRight="@+id/tvDescription"
        android:layout_alignEnd="@+id/tvDescription"
        android:layout_alignBottom="@+id/ivThumb"
        android:gravity="right">

        <ImageView
            android:src="@drawable/ic_person_gray"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_alignBottom="@+id/ivThumb" />

        <TextView
            android:text="27"
            android:textSize="10sp"
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/spacing_medium" />

        <ImageView
            android:src="@drawable/ic_side_medical"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivThumb" />

        <TextView
            android:text="3"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/spacing_medium" />

    </LinearLayout>

</RelativeLayout>